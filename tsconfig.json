{
    "compilerOptions": {
        "target": "ES2022",
        "lib": [
            "ES2022",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "moduleResolution": "bundler",
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "types": [
            "chrome",
            "node"
        ],
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@core/*": [
                "src/core/*"
            ],
            "@cdp/*": [
                "src/cdp/*"
            ],
            "@ai/*": [
                "src/ai/*"
            ],
            "@ui/*": [
                "src/ui/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}